@model Project.Models.Order
@{
    ViewData["Title"] = "Return Confirmation";
}

<h2>Return Confirmation</h2>

<div class="alert alert-success">
    Your return request has been submitted successfully.
</div>

<h4>Order ID: @Model.OrderId</h4>
<p>Customer: @Model.CustomerName</p>
<p>Status: @Model.Status</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Order" asp-action="Index" class="btn btn-primary">Back to Orders</a>
