@model IEnumerable<Project.Models.Delivery>

@{
    ViewData["Title"] = "Manage Deliveries";
}

<h2>Deliveries</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Delivery ID</th>
            <th>Order ID</th>
            <th>Address</th>
            <th>Status</th>
            <th>Update Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var delivery in Model)
        {
            <tr>
                <td>@delivery.Id</td>
                <td>@delivery.OrderId</td>
                <td>@delivery.ShippingAddress</td>
                <td>@delivery.Status</td>
                <td>
                    <form asp-action="UpdateDeliveryStatus" method="post" asp-route-id="@delivery.Id">
                        <select name="status" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="Shipped">Shipped</option>
                            <option value="Delivered">Delivered</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary mt-1">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
