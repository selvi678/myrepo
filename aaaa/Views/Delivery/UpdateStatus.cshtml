@model Project.Models.DeliveryStatusViewModel

@{
    ViewData["Title"] = "Update Delivery Status";
}

<h2>Update Delivery Status for Order #@Model.OrderId</h2>

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="DeliveryStatus"></label>
        <select asp-for="DeliveryStatus" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Shipped">Shipped</option>
            <option value="Out for Delivery">Out for Delivery</option>
            <option value="Delivered">Delivered</option>
            <option value="Canceled">Canceled</option>
        </select>
        <span asp-validation-for="DeliveryStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
