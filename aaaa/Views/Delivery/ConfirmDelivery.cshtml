@model Project.Models.Order

@{
    ViewData["Title"] = "Confirm Delivery";
}

<h2>Delivery Confirmation</h2>

@if (Model != null)
{
    <div class="card p-4 shadow rounded">
        <h4>Order #@Model.OrderId</h4>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Customer Name:</strong> @Model.CustomerName</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>

        <h5>Order Items</h5>
        <ul>
            @foreach (var item in Model.OrderItems)
            {
                <li>@item.Product.Name - Quantity: @item.Quantity</li>
            }
        </ul>

        <div class="mt-3">
            <a asp-action="DeliveryDetails" asp-route-id="@Model.OrderId" class="btn btn-primary">Back to Details</a>
            <a asp-action="TrackOrder" asp-route-orderId="@Model.OrderId" class="btn btn-secondary">Track Again</a>
        </div>
    </div>
}
else
{
    <p class="text-danger">Order not found or could not be confirmed.</p>
}
