@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Manage Orders</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.Email</td>
                <td>@order.OrderDate</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a href="@Url.Action("DeleteOrder", "Admin", new { id = order.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
