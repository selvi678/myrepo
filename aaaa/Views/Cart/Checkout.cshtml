@model CheckoutViewModel

<h2>Checkout</h2>

@if (Model.CartItems.Any())
{
    <h4>Your Cart:</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Quantity * item.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total: @Model.Total.ToString("C")</h4>  <!-- Use the pre-calculated total here -->
        <a href="#" class="btn btn-primary">Confirm Order</a> <!-- Add order confirmation logic here -->
    </div>
}
else
{
    <p>Your cart is empty. Please add some items before proceeding.</p>
}
