@model Project.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Delete Review for @Model.Product.Name</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this review?
</div>

<div>
    <strong>Rating:</strong> @Model.Rating<br />
    <strong>Comment:</strong> @Model.Comment
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("List", "Review", new { productId = Model.ProductId })" class="btn btn-secondary">Cancel</a>
</form>
