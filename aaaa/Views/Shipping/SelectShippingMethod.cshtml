@model string[]

@{
    ViewData["Title"] = "Select Shipping Method";
    var orderId = Context.Request.Query["orderId"];
}

<h2>Select Shipping Method</h2>

<form asp-action="SetShippingMethod" method="post">
    <input type="hidden" name="orderId" value="@orderId" />

    <div class="form-group">
        @foreach (var method in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="shippingMethod" id="@method" value="@method" required />
                <label class="form-check-label" for="@method">@method</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Confirm Shipping Method</button>
</form>
