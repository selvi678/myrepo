@model Project.Models.User

@{
    ViewData["Title"] = "Profile";
}

<h2>Welcome, @Model.FullName</h2>

<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Password:</strong> @Model.Password</p> <!-- You may want to avoid showing this in real apps -->

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Profile</a>
