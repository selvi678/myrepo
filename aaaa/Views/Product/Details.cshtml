@model Project.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card p-3 shadow-sm">
    <h4>@Model.Name</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> ₹@Model.Price.ToString("0.00")</p>
    <p><strong>Stock:</strong> @Model.Stock</p>
    <p><strong>Image URL:</strong> @Model.ImageUrl</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
