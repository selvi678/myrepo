@model Project.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Confirmation</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> ₹@Model.Price.ToString("0.00")</p>
    <p><strong>Stock:</strong> @Model.Stock</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
